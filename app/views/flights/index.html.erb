<div class="flex flex-col w-screen h-screen">
  <div class="pl-10 py-16 text-white rounded-bl-5rem bg-gradient-to-br from-purple-300 to-pink-500 text-4xl font-bold mb-5">
    Flights
  </div>

  <div class="overflow-x-hidden overflow-y-scroll flex flex-col items-center mx-5">
    <%= render @flights %>
  </div>

  <div class="self-center text-lg bg-transparent p-3">
    <% unless @flights.first_page? %>
      <%=  link_to '<', flights_path(page: @flights.prev_page)  %>
    <% end %>

    Page <%= @flights.current_page %>/<%= @flights.total_pages %>

    <% unless @flights.last_page? %>
      <%= link_to '>', flights_path(page: @flights.next_page) %>
    <% end %>
  </div>
</div>
