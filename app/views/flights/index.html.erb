<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Departure airport</th>
      <th>Arrival airport</th>
      <th>Departure datetime</th>
      <th>Arrival datetime</th>
      <th>Max eco seats</th>
      <th>Max business seats</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.number %></td>
        <td><%= flight.departure_airport %></td>
        <td><%= flight.arrival_airport %></td>
        <td><%= flight.departure_datetime %></td>
        <td><%= flight.arrival_datetime %></td>
        <td><%= flight.max_eco_seats %></td>
        <td><%= flight.max_business_seats %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

