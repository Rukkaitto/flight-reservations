<div class="flex flex-col w-screen h-screen">
  <div class="pl-10 py-16 text-white rounded-bl-5rem bg-gradient-to-br from-purple-300 to-pink-500 text-4xl font-bold mb-5">
    Sign up
  </div>

  <div class="flex flex-col items-center mx-5 pt-5 self-center p-8 rounded-xl border-2 border-purple-300">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", :placeholder => "Last name", :class => "focus:outline-none rounded-full p-3 my-3 border-2 border-purple-300 w-full" %>
      </div>

      <div class="">
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :placeholder => "First name", :class => "focus:outline-none rounded-full p-3 my-3 border-2 border-purple-300 w-full"  %>
      </div>

      <div class="flex flex-row items-center">
        <%= f.label :birth_date %><br />
        <%= f.date_field :birth_date, autofocus: true, autocomplete: "birth_date", :class => "focus:outline-none rounded-full p-3 my-3 border-2 border-purple-300 w-full" %>
      </div>

      <div class="">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "Email", :class => "focus:outline-none rounded-full p-3 my-3 border-2 border-purple-300 w-full" %>
      </div>

      <div class="flex flex-col items-center">
        <%= f.password_field :password, autocomplete: "new-password", :placeholder => "Password", :class => "focus:outline-none rounded-full p-3 my-3 border-2 border-purple-300 w-full" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>

      <div class="">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "Repeat password", :class => "focus:outline-none rounded-full p-3 my-3 border-2 border-purple-300 w-full" %>
      </div>

      <div class="">
        <%= f.submit "Sign up", :class => "p-3 rounded-full w-full bg-pink-500 text-white font-semibold"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>